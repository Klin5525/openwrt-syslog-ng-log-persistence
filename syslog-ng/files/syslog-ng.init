# Copyright (C) 2006-2019 OpenWrt.org

START=50

USE_PROCD=1

start_service() {
	[ -f /etc/syslog-ng.conf ] || return 1
	# 启动内核日志注入守护进程（如果存在）
	if [ -x /usr/libexec/inject-kernel-daemon.sh ]; then
		# 防止重复启动
		killall inject-kernel-daemon.sh 2>/dev/null
		/usr/libexec/inject-kernel-daemon.sh &
	fi
	procd_open_instance
	procd_set_param command /usr/sbin/syslog-ng --foreground
	procd_close_instance
}

reload_service() {
	/usr/sbin/syslog-ng-ctl reload
}
